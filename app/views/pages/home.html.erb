<div class="container mainPage">
  <h1 class="align" >Liftr</h1>

  <div class="container img">
    <%= image_tag 'barbell.jpg', class: "img-fluid rounded", alt: "barbell" %>
  </div>

  <div class="row">
    <div class="col">A simple workout tracker </div>
    <div class="col">Made with the beginner in mind</div>
    <div class="col">Punch in your preferences and go from there</div>
  </div>

  <div class="buttons">
    <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-outline-primary" %>
    <%= link_to 'Log In', new_user_session_path, class: "btn btn-outline-primary" %>
  </div>

</div>