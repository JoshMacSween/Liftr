<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th colspan="3"><h1>Workouts</h1></th>
    </tr>
  </thead>
  <tbody>
    <% @workouts.each do |workout| %>
      <tr data-first-jquery-thing-id=<%= workout.id %>>
        <td><%= link_to workout.title, workout_path(workout)%></td>
        <td><%= link_to workout.date.strftime('%F') if workout.date.present?%></td>
        <td><%= link_to 'Show', workout %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
        <td><%= link_to 'Delete', workout, remote: true, method: :delete, data: {'js-destroy-link' => true } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workout', new_workout_path, class: "btn btn-outline-primary" %>
<%= link_to 'Back', pages_members_path, class: "btn btn-outline-primary" %>
